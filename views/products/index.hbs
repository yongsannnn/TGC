{{#extends "base"}}
{{#block "title"}}
Products | Tea Gee See
{{/block}}
{{#block "content"}}
<h1>All Products List</h1>
<a href="/products/create" class="btn btn-success mb-2">Create</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Ingredient</th>
            <th>Water Temperature</th>
            <th>Steep_time</th>
            <th>Serving</th>
            <th>Stock</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.cost}}</td>
                <td>{{this.description}}</td>
                <td>{{this.ingredient}}</td>
                <td>{{this.water_temperature}}</td>
                <td>{{this.steep_time}}</td>
                <td>{{this.serving}}</td>
                <td>{{this.stock}}</td>
                <td>
                    <img class="img" style="width:100px" src="{{this.image}}"/>
                </td>
                <td>
                    <a href="/products/{{this.id}}/update" class="btn-sm btn-success">Update</a>
                    <a href="/products/{{this.id}}/delete" class="btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}
{{/extends}}